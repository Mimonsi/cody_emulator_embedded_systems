{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (cargo release)",
      "type": "shell",
      "command": "cargo build --release",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell.exe",
          "args": [
            "-NoProfile",
            "-Command"
          ]
        }
      }
    },
    {
      "label": "Run cargo (release) with codybasic.bin",
      "type": "shell",
      "command": "cargo run --release -- codybasic.bin",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell.exe",
          "args": [
            "-NoProfile",
            "-Command"
          ]
        }
      }
    },
    {
      "label": "Run current file with cargo (release)",
      "type": "shell",
      "command": "cargo run --release -- --fix-newlines --uart1-source \"${file}\" codybasic.bin",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "powershell.exe",
          "args": [
            "-NoProfile",
            "-Command"
          ]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}